<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >
    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >
        <TextView
            android:id="@+id/headtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dmserif_display_regular"
            android:text="Sign Up"
            android:textColor="#000000"
            android:textSize="30dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up to the best book library"
            android:layout_below="@id/headtitle"
            android:id="@id/signupsub"
            />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/signupsub"
            android:layout_centerHorizontal="true"
            android:background="@drawable/input_button"
            android:hint="Email"
            android:autofillHints="emailAddress"
            android:inputType="textEmailAddress"
            android:textColorHint="#8C8C8C"
            android:textSize="14sp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:fontFamily="@font/satoshi_regular"
            android:layout_marginTop="50dp"/>
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/email"
            android:layout_centerHorizontal="true"
            android:background="@drawable/input_button"
            android:hint="Password"
            android:autofillHints="password"
            android:inputType="textPassword"
            android:textColorHint="#8C8C8C"
            android:textSize="14sp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:fontFamily="@font/satoshi_regular"
            android:layout_marginTop="15dp"/>
        <Button
            android:id="@+id/signup"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/password"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            android:background="@drawable/login_button"
            android:layout_marginTop="15dp"
            android:text="Sign Up"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:fontFamily="@font/satoshi_regular"/>

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/signup"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginTop="15dp"
            android:text="Login"
            android:textSize="14sp"
            android:textColor="#262626"
            android:fontFamily="@font/satoshi_regular"/>
    </RelativeLayout>
</RelativeLayout>